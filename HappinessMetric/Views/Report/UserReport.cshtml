@model List<HappinessMetric.Repository.HappinessRating>
@{
    ViewBag.Title = "UserReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/buttons.bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/jquery.toast.js"></script>
<script src="~/Scripts/alert.js"></script>
<form class="container" id="userreportform">
    <div class="row">
        <div class="col-sm-4">
            <h4 class="userrpeort">Rating Report</h4>
        </div>
    </div>
    <table id="userreporttable" class="table table-striped table-bordered nowrap">
        <thead>
            <tr>
                <th>Project</th>
                <th>Sprint</th>
                <th>Developer</th>
                <th>Rating</th>
                <th>What feels best right now?</th>
                <th>What feels worst right now?</th>
                <th>What would increase your happiness index?</th>
                <th>Created on</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(ModelItem => item.Project) </td>
                    <td>@Html.DisplayFor(ModelItem => item.Sprint) </td>
                    <td>@Html.DisplayFor(ModelItem => item.Developer) </td>
                    <td>@Html.DisplayFor(ModelItem => item.HappyRatingwithTeam) </td>
                    <td>@Html.DisplayFor(ModelItem => item.FeelsBest) </td>
                    <td>@Html.DisplayFor(ModelItem => item.FeelsWorst) </td>
                    <td>@Html.DisplayFor(ModelItem => item.IncreaseHappiness) </td>
                    <td>@Html.DisplayFor(ModelItem => item.CreatedOn) </td>
                </tr>
            }
        </tbody>
    </table>

</form>
<script type="text/javascript">
    $(document).ready(function () {
        $('#userreporttable').DataTable({
            "scrollY": 200,
            "scrollX": true,
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    });
</script>
